{
	"name": "Landstown Robotics",

	"build": {
		"dockerfile": "Dockerfile"
	},

	"forwardPorts": [4000],

	"postCreateCommand": "bash ./scripts/install.sh",

	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"csstools.postcss",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"containerEnv": {
		"DEV": "true"
	}
}
