{
	"compilerOptions": {
		"lib": ["ES2022"],
		"module": "ESnext",
		"target": "ES2022",
		"moduleResolution": "node",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
