{
	"compilerOptions": {
		"lib": ["es2022", "dom"],
		"module": "esnext",
		"target": "es2022",
		"moduleResolution": "node",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
